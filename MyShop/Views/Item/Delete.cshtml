@model Item

<h2>Delete Item</h2>

<h3>Are you sure you want to delete this item?</h3>
<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Item Id</dt>
        <dd class="col-sm-10">@Model.ItemId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">@Model.ImageUrl</dd>
    </dl>

    <!-- The method="post" attribute specifies the HTTP Post method to be used when submitting the form. We typically use Post for Form Submissions
         that modify data on the server as it's more secure and doesn't expose sensitive data.
         The reason why we have method="post" here and not on Update.cshtml is because Update.cshtml has <form> tags and in the form tags, the HTTP
         method by default is POST. Here we don't have the Form tags and thus we have to specify the HTTP method="post"
    -->
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ItemId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Table" class="btn btn-secondary">Cancel</a>
    </form>
</div>