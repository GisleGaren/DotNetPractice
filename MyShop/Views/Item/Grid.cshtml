@model ItemListViewModel

<h1>List of Shop Items (@Model.CurrentViewName View)</h1>
<a href="/Item/Table">Table View</a>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model.Items)
    {
        <!-- With partial views, we are essentially doing the equivalent in .NET to creating components in React, here we are pointing to the _ItemCard
             view for every item that is in the Items List
        -->
        <partial name="_ItemCard" model="item"/>
    }
</div>
