@model IEnumerable<Customer>

<div class="container">
    <table class='table table-striped'>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Orders</th>
            <th>Actions</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.Name</td>
                <td>@customer.Address</td>
                <td>
                    @if (@customer.Orders != null)
                    {
                        <!-- Begins by iterating over Customer orders collection using Select. Inside Select, it projects
                             each order object in customer.Orders collection to a String format so as a result, if a customer is
                             conencted to 3 orders, we get <p> Order1, Order2, Order3 <p>
                        -->
                        <p>@string.Join(", ", @customer.Orders.Select(order => $"Order{order.OrderId}"))</p>
                    }
                </td>
                <td></td>
            </tr>
        }
    </table>
</div>