@model IEnumerable<Item>

<div class="container">
    <table class='table table-striped'>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemId</td>
                <td>
                    <!-- Here we are providing a link where the title is located with the help of ASP.NET MVC tag helpers for routing -->
                    <!-- asp-controller tag specifies the controller to which the URL should be generated. In this case the url points to ItemController
                         asp-action points to which actionMethod and in this case it is the Details() action method.
                         asp-route-id is how we can pass the current ItemId into the Details() action method.
                    -->
                    <a asp-controller="Item"
                       asp-action="Details"
                       asp-route-id="@item.ItemId"> @item.Name</a>
                </td>
                <td>@item.Price.ToString("0.00 NOK")</td>
                <td>@item.Description</td>
                <td><img src="@item.ImageUrl" alt="Item Image" style="max-width: 80px; max-height: 80px;" /></td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.ItemId">Update</a>
                    <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
                </td>
            </tr>
        }
    </table>
    <p>
        <a class="btn btn-secondary"
        asp-controller="Item"
        asp-action="Create">Create New Item</a>
    </p>
</div>